{
    "extends": "tslint:recommended",
    "rules": {
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "interface-name": [false],
        "max-line-length": [ true, 185 ],
        "member-access": false,
        "member-ordering": [
            false,
            "variables-before-functions"
        ],
        "no-bitwise": false,
        "no-empty": false,
        "no-namespace": false,
        "no-reference": false,
        "no-string-literal": false,
        "ordered-imports": false,
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-whitespace"
        ],
        "object-literal-sort-keys": false,
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": "never"
            }
        ],
        "variable-name": false,
        "curly": false,
        "array-type": false,
        "arrow-parens": [true, "ban-single-arg-parens"]
    }
}
